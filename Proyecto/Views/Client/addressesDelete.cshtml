@model Proyecto.ViewModels.ContactInfo
@{
    Layout = "~/Views/Shared/_ClientLayout.cshtml";

}
<h2>Contact</h2>

<h3>Delete</h3>

<h4> Are you sure you want to delete this contact info?</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="addressesDelete" method="post">
            <input asp-for="Contact.IdContact" type="hidden" value="@Model.Contact.IdContact" />
            <input asp-for="Contact.IdUser" type="hidden" value="@Model.Contact.IdUser" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <p>@Model.Contact.FirstName</p>
                <input asp-for="Contact.FirstName" class="form-control" value="@Model.Contact.FirstName" type="hidden" />
                <span asp-validation-for="Contact.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <p>@Model.Contact.LastName</p>
                <input asp-for="Contact.LastName" class="form-control" value="@Model.Contact.LastName" type="hidden" />
                <span asp-validation-for="Contact.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <p>@Model.Contact.PhoneNumber</p>
                <input asp-for="Contact.PhoneNumber" class="form-control" value="@Model.Contact.PhoneNumber" type="hidden" />
                <span asp-validation-for="Contact.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <p>@Model.Contact.HomeAddress</p>
                <input asp-for="Contact.HomeAddress" class="form-control" value="@Model.Contact.HomeAddress" type="hidden" />
                <span asp-validation-for="Contact.HomeAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

